<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
       xmlns:beans="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"


       xsi:schemaLocation="
       http://www.springframework.org/schema/security
       http://www.springframework.org/schema/security/spring-security.xsd
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">


    <beans:bean id="encoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder">
        <beans:constructor-arg name="strength" value="11"/>
    </beans:bean>

    <http auto-config="true" use-expressions="true">
        <form-login default-target-url="/" login-page="/signPage"
                    authentication-failure-url="/signPage?login_error=t"
                    username-parameter="username" password-parameter="password"/>
        <intercept-url pattern="/" access="hasAnyRole('ROLE_ANONYMOUS','ROLE_ADMIN','ROLE_USER')"/>
        <intercept-url pattern="/tickets/reserveTickets" access="hasAnyRole('ROLE_ADMIN','ROLE_USER')"/>
        <intercept-url method="POST" pattern="/admin/**" access="hasRole('ROLE_ADMIN')"/>
    </http>


    <authentication-manager alias="authenticationManager">
        <authentication-provider user-service-ref="userDetailsService">
            <password-encoder ref="encoder"/>
        </authentication-provider>
    </authentication-manager>

</beans:beans>